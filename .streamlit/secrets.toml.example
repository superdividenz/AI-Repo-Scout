# Environment variables for Streamlit Cloud
# Copy this file to .streamlit/secrets.toml and add your actual values

# GitHub API Configuration
[github]
token = "your_github_token_here"  # Optional but recommended for higher rate limits

# Model Configuration (all default to free Hugging Face models)
[models]
summarizer = "t5-small"
embeddings = "distilbert-base-uncased"
similarity = "sentence-transformers/all-MiniLM-L6-v2"

# Dashboard Configuration
[dashboard]
